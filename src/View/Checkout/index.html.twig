        <td>
            <input
                aria-label="Number of cupcakes"
                type="number"
                min="0"
                data-index="{{ index }}"
                name="cart[{{ index }}][numberCupcake]"
                value="0">
        </td>
        <td>
            <input
                aria-label="Unit price"
                type="number"
                min="0"
                step=".01"
                name="cart[{{index}}][unitPrice]"
                value="0">
        </td>
        <td>
            <button type="button" class="btn primary-btn" data-remove-item="">
                -
            </button>
        </td>
    </tr>
</script>
{% endverbatim %}
{% endblock %}
